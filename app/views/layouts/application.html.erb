<!DOCTYPE html>
<html>
  <head>
    <title>DashboardsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag '/favicon-16x16.png', rel: 'apple-touch-icon', sizes: '16x16', type: 'image/png' %>
    <%= favicon_link_tag '/favicon-32x32.png', rel: 'apple-touch-icon', sizes: '32x32', type: 'image/png' %>
    <%= favicon_link_tag '/apple-touch-icon.png', rel: 'apple-touch-icon', sizes: '180x180' %>
    <link rel="manifest" href="/site.webmanifest">
    <meta content="NOINDEX, NOFOLLOW" name="ROBOTS">
    <title>DashboardApp</title>
    <meta name="description" content="Just a simple dashboard app">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-primary">
      <a class="navbar-brand">DashboardsApp</a>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-dark' if user_signed_in? %>
    </nav>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= bootstrap_class_for(key) %> alert-dismissible fade show mt-3">
          <%= value %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <% if user_signed_in? %>
        <h4 class="mt-3">Hello: <%= current_user.email %>!</h4>
        <small>You can work with your dashboards here</small>
        <hr>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
